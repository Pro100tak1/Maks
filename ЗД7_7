#Задача 1
array = list(map(int, input("Введите массив целых чисел через пробел: ").split()))
sum_even_indices = sum(array[i] for i in range(0, len(array), 2))
product_odd_indices = 1
for i in range(1, len(array), 2):
    product_odd_indices *= array[i]
print("Сумма элементов с четными индексами:", sum_even_indices)
print("Произведение элементов с нечетными индексами:", product_odd_indices)

#Задача 2
array = list(map(int, input("Введите массив целых чисел через пробел: ").split()))
min_index = array.index(min(array))
max_index = array.index(max(array))
# Перестановка
array[min_index], array[max_index] = array[max_index], array[min_index]
print("Массив после перестановки минимального и максимального элемента:", array)
