def calculate_average():
  
    total = 0  
    count = 0  

    while True:
        num = float(input("Введите число (0 для завершения): "))  

        if num == 0:
            break  

        total += num  
        count += 1 

    if count == 0:
        return 0  

    average = total / count 
    return average  

average = calculate_average()
print("Среднее значение:", average)
