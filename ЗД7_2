#Вариант 1
def find_min_index():
  try:
    n = int(input("Введите количество элементов массива: "))
    if n <= 0:
      print("Количество элементов должно быть положительным числом.")
      return

    arr = []
    print("Введите элементы массива, разделенные пробелами:")
    elements = input().split()

    if len(elements) != n:
      print("Введено неверное количество элементов.")
      return

    for element in elements:
      try:
        arr.append(int(element))
      except ValueError:
        print("Ошибка: Введен не целое число.")
        return

    if not arr:
      print("Массив пуст.")
      return

    min_val = arr[0]  
    min_index = 0     

    for i in range(1, n):
      if arr[i] < min_val:
        min_val = arr[i]  
        min_index = i     

    print("Индекс минимального элемента:", min_index)

  except ValueError:
    print("Ошибка: Введено не целое число для количества элементов.")

find_min_index()
